rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // profiles: allow read for everyone, write only owner
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // photos uploaded by users: allow read if metadata public == "true" or requester authenticated
    match /photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null || request.resource.metadata.public == "true" || resource.metadata.public == "true";
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 10 * 1024 * 1024;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // bgm: admin only
    match /bgm/{allPaths=**} {
      allow read, write, delete: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // default: deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
